generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  cpf String @unique
  password String
  role String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @default(now()) @map("updated_at")
  package Package[]

  @@map("users")
}

model Recipient {
  id String @id @default(uuid())
  name String
  rua String
  numero Int
  bairro String
  cidade String
  estado String
  latitude Decimal
  longitude Decimal
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @default(now()) @map("updated_at")
  package Package[]
  notifications Notification[]

  @@map("recipient")
}

model Package {
  id String @id @default(uuid())
  name String
  status String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime? @default(now()) @map("updated_at")
  recipientId String @map("recipient_id")
  userId String @map("user_id")

  recipient Recipient @relation(fields: [recipientId], references: [id])
  user User @relation(fields: [userId], references: [id])

  @@map("package")
}

model Notification {
  id String @id @default(uuid())
  recipientId String @map("recipient_id")
  title String
  content String
  readAt DateTime? @map("read_at")
  createdAt DateTime @default(now()) @map("created_at")

  recipient Recipient @relation(fields: [recipientId], references: [id])

  @@map("notifications")
}
